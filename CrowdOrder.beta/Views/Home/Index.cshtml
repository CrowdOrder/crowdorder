@using Microsoft.AspNetCore.Identity
@using CrowdOrder.beta.Infrastructure;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject SiteDataService siteDataService
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



@{
    ViewData["Title"] = "Home Page";
}
@section metatags{
    <meta property='og:title' content='Crowd Order' />
    <meta property='og:image' content='@UrlRewriteService.FixUrl(Context.Request.Host.Value, "Logo100.png")' />
    <meta property='og:description' content='The only marketplace where companies offer exclusive rates to start-ups and small businesses' />
    <meta property='og:url' content='@UrlRewriteService.FixUrl(Context.Request.Host.Value, "")' />
    <meta name='twitter:card' content='summary' />
    <meta name='twitter:site' content='@UrlRewriteService.FixUrl(Context.Request.Host.Value, "")' />
    <meta name='twitter:title' content='Crowd Order' />
    <meta name='twitter:description' content='The only marketplace where companies offer exclusive rates to start-ups and small businesses' />
    <meta name='twitter:image' content='@UrlRewriteService.FixUrl(Context.Request.Host.Value, "Logo100.png")' />
}
<section id="hero" class="section-bg">
    <div id="heroCarousel" class="slide carousel-fade">
        <div class="carousel-inner" role="listbox">

            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="carousel-container">
                    <div class="container">
                        <div class="row content">
                            <div class="col-lg-7 align-text-bottom">
                                <h2 class="animate__animated animate__fadeInDown">Welcome to <span>Crowd Order</span></h2>
                                <p class="animate__animated animate__fadeInUp largerfont">
                                    The only marketplace where companies offer exclusive rates to start-ups and small businesses
                                </p>
                                @if (!SignInManager.IsSignedIn(User))
                                {
                                    <form id="external-account" asp-area="Identity" asp-page="/Account/ExternalLogin"
                                          asp-route-returnUrl="/" method="post">
                                        <a asp-area="Identity" asp-page="/Account/Register" class="btn-get-started animate__animated animate__fadeInUp scrollto">Join Crowd Order for free</a>
                                        <button type="submit" asp-area="Identity" name="provider" value="Google" asp-page="/Account/Externallogin" class="btn-get-started animate__animated animate__fadeInUp scrollto loginBtn--google">    </button>
                                    </form>
                                }
                                <p class="animate__animated animate__fadeInUp" style="margin-top:20px;">
                                    Everything your business needs at an attractive price
                                </p>
                            </div>
                            <div class="col-lg-5 pt-4 pt-lg-0 hideSmall homeSmallImgFix">
                                <img src="~/img/finance320.png" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero -->
<main id="main">
    <!-- ======= Who Section ======= -->
    <section id="who" class="about">
        <div class="home-container">
            <div class="container">
                <div class="row content">
                    <div class="col-lg-6  pt-4 pt-lg-0">
                        <h2>Who we are</h2>
                        <img src="~/Who we are320.png" class="hideBig" />
                        <p>Crowd Order is the only marketplace where companies are prepared to offer their products and services at exclusive rates to start-ups and small businesses</p>
                        <a href="about-us" class="get-started-btn animate__animated animate__fadeInUp scrollto">Learn more</a>
                    </div>
                    <div class="col-lg-6 hideSmall">
                        <img src="~/img/Who we are400.png" />
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Who Section -->
    <!-- ======= what Section ======= -->
    <section id="what" class="about">
        <div class="home-container">
            <div class="container">

                <div class="row content">
                    <div class="col-lg-6  pt-4 pt-lg-0 hideSmall">
                        <img src="~/img/commerce400.png" />
                    </div>
                    <div class="col-lg-6">
                        <h2>What we do</h2>
                        <img src="~/commerce320.png" class="hideBig" />
                        <p>
                            We find companies that are ready and willing to offer you a reduced rate to help your start-up or small businesses access premium products and services at affordable prices. Essentially, Crowd Order aggregates the buying power of all of its users to secure a rate that anyone can take advantage of
                        </p>
                        <p>
                            It’s completely free to join Crowd Order and takes less than a minute to get started
                        </p>
                        <a asp-area="Identity" asp-page="/Account/Register" class="get-started-btn animate__animated animate__fadeInUp scrollto">Get started</a>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End About Section -->
    <!-- ======= available Section ======= -->
    <section id="available" class="about">
        <div class="home-container">
            <div class="container">
                <div class="row content">
                    <div class="col-lg-6">
                        <h2>What's available</h2>
                        <img src="~/img/What's available320.png" class="hideBig" />
                        <p>Are you looking for a new software solution? A marketing or design agency to work on your brand? To discover new ways to save on tax? Perhaps to improve your finance function? Or maybe to outsource admin or other operations? Whatever you need, we have a partner ready to offer you an exclusive rate</p>
                        <a href="/small-business-start-up-services" class="get-started-btn animate__animated animate__fadeInUp scrollto">View all offers</a>
                    </div>
                    <div class="col-lg-6 pt-4 pt-lg-0 hideSmall">
                        <img src="~/img/What's available500.png" />
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Whats Section -->
    <!-- ======= Partners Section ======= -->
    <section id="clients" class="clients hideSmall">
        <div class="home-container">
            <div class="container">
                <div class="row content">
                    <div class="row" style="padding: 20px;">
                        @foreach (var logo in siteDataService.GetPartnerLogos(Context))
                        {
                            <div class="col-lg-2 col-md-4 col-6 d-flex align-items-center justify-content-center">
                                <a href="@logo.Url"><img src="partners/@logo.LogoUrl" class="img-fluid" alt=""></a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Clients Section -->
    <!-- ======= blog Section ======= -->

    <section id="services" class="services">
        <div class="container">

            <div class="section-title">
                <h2>Our Blog</h2>
                <p>Latest information from our team</p>
            </div>

            <div class="row">
                @foreach (var item in siteDataService.GetLatestBlogs(2))
                {
                    var first = true;
                    if (first)
                    {
                        first = false;
                        <div class="col-md-6">
                            <div class="icon-box">
                                <i class="icofont-computer"></i>
                                <h4><a href="@UrlRewriteService.FixUrl(Context.Request.Host.Value, $"small-business-start-up-blogs-guides/{item.Url}")">@item.Title</a></h4>
                                <img src="@UrlRewriteService.FixUrl(Context.Request.Host.Value, $"img/blogs/{item.MainImagePath}")" style="max-width:100%" />
                                <p>@item.Abstract</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-6 mt-4 mt-md-0">
                            <div class="icon-box">
                                <i class="icofont-computer"></i>
                                <h4><a href="@UrlRewriteService.FixUrl(Context.Request.Host.Value, $"small-business-start-up-blogs-guides/{item.Url}")">@item.Title</a></h4>
                                <img src="@UrlRewriteService.FixUrl(Context.Request.Host.Value, $"img/blogs/{item.MainImagePath}")" style="max-width:100%" />
                                <p>@item.Abstract</p>
                            </div>
                        </div>
                    }
                }
            </div>

        </div>
    </section><!-- End Services Section -->
</main><!-- End #main -->
