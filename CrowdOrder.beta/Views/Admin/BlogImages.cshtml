@Model Microsoft.Extensions.FileProviders.IDirectoryContents
@using CrowdOrder.beta.Infrastructure;


<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h1>Website Admin</h1>
                <ol>
                    <li><a href="@UrlRewriteService.FixUrl(Context.Request.Host.Value, "")">Home</a></li>
                    <li><a href="~/Admin">Website Admin</a></li>
                    <li>Blog images</li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <form method="post" enctype="multipart/form-data">
                    <input type="file" name="file" />
                    <button type="submit">Upload</button>
                </form>
            </div>
        </div>
    </section>
    <section id="blog" class="blog">
        <div class="container">
            <div class="=row">

                <p>There are so many factors that go into making a start up or SME successful. Our Blogs and Guide are a great resource to help you drive your business forward.</p>

            </div>
            <div class="row">
                @foreach (var image in Model)
                {
                    <div class="col-lg-4  col-md-6 d-flex align-items-stretch" data-aos="fade-up">
                        <article class="entry">

                            <div class="entry-img">
                                <img src="@UrlRewriteService.FixUrl(Context.Request.Host.Value, $"img/blogs/{image.Name}")" class="img-fluid" />
                            </div>
                            <div class="entry-content">
                                <p>@image.Name</p>
                            </div>
                        </article><!-- End blog entry -->
                    </div>
                }
            </div>
        </div>
    </section><!-- End Blog Section -->
</main>