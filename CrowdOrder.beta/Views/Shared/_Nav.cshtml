@inject CrowdOrder.beta.Data.CategoryRepository repo
<nav class="nav-menu d-none d-lg-block">

    <ul>
        <li class="active"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li><a href="about-us">About Us</a></li>
        <li class="drop-down">
            <a href="/small-business-start-up-services">Services</a>
            <ul>
                @foreach (var cat in repo.MenuData())
                {
                    if (cat.SubCategories.Count > 0)
                    {
                        <li class="drop-down">
                            <a href="@cat.Url">@cat.Name</a>
                            <ul>
                                @foreach (var sub in cat.SubCategories)
                                {
                                    <li>
                                        <a href="@sub.Url">@sub.Name</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href="@cat.Url">@cat.Name</a></li>
                    }
                }
            </ul>
        </li>

        <li><a asp-area="" asp-controller="Blog" asp-action="Index">Blogs &amp; Guides</a></li>

    </ul>

</nav><!-- .nav-menu -->

