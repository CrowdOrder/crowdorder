@model ErrorViewModel
@using CrowdOrder.beta.Infrastructure;
@{
    ViewData["Title"] = "Error";
}


<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <ol>
                    <li><a href="@UrlRewriteService.FixUrl(Context.Request.Host.Value, "")">Home</a></li>
                    <li>Error</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->

    <section id="blog" class="blog">
        <div class="container">

            <div class="row content">
                <div class="col-lg-6  pt-4 pt-lg-0">
                    <h1>Sorry we are experiencing a problem right now</h1>
                    <p>Our engineers have been alerted and are looking to resolve a.s.a.p.</p>
                </div>
                <div class="col-lg-6">
                    <img src="~/problem400.png" />
                </div>
            </div>

        </div>
    </section>
</main>
