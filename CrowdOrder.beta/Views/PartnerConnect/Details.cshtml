@model CrowdOrder.beta.Data.PartnerConnectionVM
@using CrowdOrder.beta.Infrastructure;
@{
    ViewData["Title"] = "Details";
}

@section metatags
{
    @if (Model.PartnerConnection.Service.PartnerSignupType == CrowdOrder.beta.Data.DataHelpers.PartnerSignupType.Url)
    {
        <meta http-equiv="refresh" content="5;url=@Model.PartnerConnection.Service.ConnectUrl">
    }
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li>Thank you</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->

    <section id="blog" class="blog">
        <div class="container">

            <div class="row">
                <h1>Thank you for selecting @Model.PartnerConnection.Service.Partner.Name</h1>
                <p></p>
            </div>
            <div class="row">                
                @if (Model.PartnerConnection.Service.PartnerSignupType == CrowdOrder.beta.Data.DataHelpers.PartnerSignupType.Url)
                {
                    <p>You will be redirected in 5 seconds to their website</p>
                }
                else
                {
                    <p>Your details have been sent to @Model.PartnerConnection.Service.Partner.Name who will contact you in due course</p>
                    <div>
                        <h3>You may also be interested in</h3>                
                        <div class="row">
                            @foreach (var item in Model.Suggestions)
                            {
                                <div class="col-lg-4  col-md-6 d-flex align-items-stretch" data-aos="fade-up">
                                    <div class="entry">

                                        <div class="entry-img">
                                            <img src="@UrlRewriteService.FixUrl(Context.Request.Host.Value, $"/Partners/{item.Partner.LogoUrl}")" alt="" class="img-fluid">
                                        </div>

                                        <h2 class="entry-title">
                                            @Html.DisplayFor(modelItem => item.Partner.Title)
                                        </h2>

                                        <div class="entry-content">
                                            <p>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </p>
                                            <div class="read-more">
                                                <a href="@UrlRewriteService.FixUrl(Context.Request.Host.Value, item.Partner.Url)">Details</a>
                                            </div>
                                        </div>

                                    </div><!-- End blog entry -->
                                </div>
                            }
                        </div>
                    </div>
                }
                </div>
        </div>
    </section>

</main>

