
@model ConfirmEmailModel
@using CrowdOrder.beta.Infrastructure;
@{
    ViewData["Title"] = "Confirm email";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h1>@ViewData["Title"]</h1>
                <ol>
                    <li><a href="@UrlRewriteService.FixUrl(Context.Request.Host.Value, "")">Home</a></li>
                    <li>Login</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">
            <div class="form-row">
                <div class="col-md-6">
                    <form method="post">
                        <p>Thank you for confirming your email address, you may now login to view our offers and discounts.</p>
                        <div class="form-group">
                            <a asp-area="Identity" asp-page="/Account/Login" class="get-started-btn ml-auto">Get Started</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>