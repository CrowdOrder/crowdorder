@page
@model ForgotPasswordModel
@using CrowdOrder.beta.Infrastructure;
@{
    ViewData["Title"] = "Forgot your password?";
}


<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h1>@ViewData["Title"]</h1>
                <ol>
                    <li><a href="@UrlRewriteService.FixUrl(Request.Host.Value, "")">Home</a></li>
                    <li>Login</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">
            <div class="form-row">
                <div class="col-md-6">
                    <form method="post">
                        <p>Please enter the email address associated with your account, and we will email you a link to reset your password.</p>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="get-started-btn">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
