@page
@model ResetPasswordConfirmationModel
@using CrowdOrder.beta.Infrastructure;
@{
    ViewData["Title"] = "Reset password confirmation";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h1>@ViewData["Title"]</h1>
                <ol>
                    <li><a href="@UrlRewriteService.FixUrl(Request.Host.Value, "")">Home</a></li>
                    <li>>@ViewData["Title"]</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">
            <p>
                Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.
            </p>
        </div>
    </section>
</main>
