@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h1>Login</h1>
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li>Login</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">
            <p id="external-login-description" class="text-info">
                You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                A CrowdOrder account has been created for you, please provide further detailsnext time you login - please use the same <strong>@Model.ProviderDisplayName</strong> login.
            </p>

            <div class="row">
                <div class="col-md-4">
                    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <input type="hidden" asp-for="Input.Email" class="form-control" />
                        <button type="submit" class="btn btn-primary">Continue account setup</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
