@page
@model RegisterConfirmationModel
@using CrowdOrder.beta.Infrastructure;
@{
    ViewData["Title"] = "Account signup confirmation";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">                
                <ol>
                    <li><a href="@UrlRewriteService.FixUrl(Request.Host.Value, "")">Home</a></li>
                    <li>@ViewData["Title"]</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">
            <div class="form-row">
                <div class="col-md-6">
                    <h1>@ViewData["Title"]</h1>
                    <p>
                        In order to validate your details we have sent an email to your given address. Please check your email to confirm your account.
                    </p>
                </div>
            </div>
        </div>
    </section>
</main>

